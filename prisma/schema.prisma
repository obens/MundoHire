generator client {
  provider = "prisma-client-js"
  output   = "../app/database/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  COMPANY
  APPLICANT
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  password      String
  date_of_birth DateTime
  phone_number  String
  resume        String
  role          Role      // <= agora usa enum corretamente
  company_name  String?   // opcional (para usuÃ¡rios do tipo COMPANY)

  applications  Application[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model JobOpening {
  id              Int       @id @default(autoincrement())
  title           String
  description     String
  company_name    String
  location        String
  posted_date     DateTime @default(now())
  expiration_date DateTime
  employment_type String
  compensation    Float

  applications    Application[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Application {
  id               Int        @id @default(autoincrement())
  user_id          Int
  job_opening_id   Int
  application_date DateTime   @default(now())
  status           String      @default("pending") 
                             // pending | approved | rejected

  user        User       @relation(fields: [user_id], references: [id])
  jobOpening  JobOpening @relation(fields: [job_opening_id], references: [id])

  createdAt   DateTime @default(now())
}

